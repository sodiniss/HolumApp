<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.holum.holum4.Connessione"
    android:background="#231a3f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dispositivi nelle vicinanze"
        android:id="@+id/t_c_1"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:id="@+id/l_discover"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:textAlignment="center"
        android:textFilterEnabled="false"
        android:smoothScrollbar="true"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/b_annullaScansione"
        android:layout_alignEnd="@+id/b_annullaScansione" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/b_annullaScansione"
        android:onClick="annullaScansione"
        android:layout_alignParentBottom="true"
        android:background="#1565c0"
        android:textColor="#FFFFFF"
        android:text="Annulla scansione"
        android:layout_alignStart="@+id/t_c_1"
        android:layout_alignEnd="@+id/t_c_1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/b_iniziaScansione"
        android:onClick="iniziaScansione"
        android:layout_alignParentBottom="true"
        android:background="#1565c0"
        android:textColor="#FFFFFF"
        android:text="Inizia scansione"
        android:layout_alignStart="@+id/t_c_1"
        android:layout_alignEnd="@+id/t_c_1"
        android:visibility="invisible"/>




</RelativeLayout>
